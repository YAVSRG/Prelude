<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netstandard2.1</TargetFramework>
    <AssemblyName>Prelude</AssemblyName>
    <PackageId>YAVSRG.Prelude</PackageId>
    <Authors>Percyqaz</Authors>
    <Product>Prelude</Product>
    <PackageProjectUrl>https://github.com/YAVSRG/Prelude</PackageProjectUrl>
    <RepositoryUrl>https://github.com/YAVSRG/Prelude</RepositoryUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <Optimize>True</Optimize>
    <Tailcalls>True</Tailcalls>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Common.fs" />
    <Compile Include="ChartFormats\Interlude.fs" />
    <Compile Include="ChartFormats\StepMania.fs" />
    <Compile Include="ChartFormats\osu!.fs" />
    <Compile Include="ChartFormats\Conversions.fs" />
    <Compile Include="Editor\Patterns.fs" />
    <Compile Include="Editor\Editor.fs" />
    <Compile Include="Scoring\Replays.fs" />
    <Compile Include="Scoring\Rulesets.fs" />
    <Compile Include="Scoring\Metrics.fs" />
    <Compile Include="Scoring\Grading.fs" />
    <Compile Include="Gameplay\Mods.fs" />
    <Compile Include="Gameplay\NoteColors.fs" />
    <Compile Include="Gameplay\Difficulty.fs" />
    <Compile Include="Themes\Storage.fs" />
    <Compile Include="Themes\Themes.fs" />
    <Compile Include="Themes\Noteskins.fs" />
    <Compile Include="Themes\Conversions.fs" />
    <Compile Include="Data\Web.fs" />
    <Compile Include="Data\Scores.fs" />
    <Compile Include="Data\Charts.fs" />
    <Compile Include="Data\Tables.fs" />
    <Compile Include="Data\Library.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FParsec" Version="1.1.1" />
    <PackageReference Include="Percyqaz.Json" Version="2.0.2" />
    <PackageReference Include="SixLabors.ImageSharp" Version="1.0.4" />
    <PackageReference Include="SixLabors.ImageSharp.Drawing" Version="1.0.0-beta13" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Percyqaz.Common\src\Percyqaz.Common.fsproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="FSharp.Core" Version="6.0.5" />
  </ItemGroup>

	<Target Name="NugetPackAutoVersioning" AfterTargets="Build">
		<Exec Command="dotnet pack -p:PackageVersion=$([System.DateTime]::Now.ToString(&quot;yyyy.MM.dd.HHmm&quot;)) --no-build --configuration $(Configuration) --output &quot;$(ProjectDir)../nuget&quot;" />
	</Target>

</Project>
